{
  "name": "chinese-learning-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "shared",
    "worker",
    "frontend",
    "mcp-server",
    "e2e"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:worker\" \"npm run dev:frontend\"",
    "dev:worker": "npm run dev -w worker",
    "dev:frontend": "npm run dev -w frontend",
    "dev:mcp": "npm run dev -w mcp-server",
    "build": "npm run build -w frontend",
    "build:frontend": "npm run build -w frontend",
    "deploy": "npm run deploy -w worker",
    "deploy:mcp": "npm run deploy -w mcp-server",
    "typecheck": "npm run typecheck -w worker && npm run typecheck -w frontend",
    "test": "npm run test -w frontend",
    "test:e2e": "npm run test -w e2e",
    "test:e2e:ui": "npm run test:ui -w e2e"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  }
}
